    }

    public void addEmpresa(SociedadAnonima sa) {
        empresas.add(sa);
    }
	
    public void removeEmpresa(SociedadAnonima sa) {
        empresas.remove(sa);
    }

    public void removeEmpresa(int i) {
        empresas.remove(i);
    }
    
    public Empresa [] getEmpresas() {
        return (Empresa []) empresas.toArray();
}

