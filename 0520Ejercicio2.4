    public String getServicio() {
        return servicio;
    }

    public float getImporte() {
        return importe;
    }

    public void setImporte(float importe) {
        if (importe < 0)
            throw new ImporteMensualException();
	this.importe = importe;
    }

    public String getCuenta() {
        return cuenta;
    }

    public void setCuenta(String cuenta) {
	this.cuenta = cuenta;
    }
	
    @Override
    public String toString() {
	return "Empresa de Servicios [servicio=" + servicio + ", importe=" + importe + ", cuenta=" + cuenta + "]";
    }

    @Override
